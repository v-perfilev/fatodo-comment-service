<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">

    <changeSet id="00000000000002" author="persoff68">

        <createTable tableName="ftd_comment">
            <column name="id" type="binary(16)">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="thread_id" type="binary(16)">
                <constraints foreignKeyName="fk_thread" references="ftd_comment_thread(id)" nullable="false"/>
            </column>

            <column name="user_id" type="binary(16)">
                <constraints nullable="false"/>
            </column>

            <column name="text" type="clob"/>

            <column name="reference_id" type="binary(16)"/>

            <column name="is_deleted" type="boolean">
                <constraints nullable="false"/>
            </column>

            <column name="created_by" type="binary(16)"/>
            <column name="created_at" type="timestamp(6)"/>
            <column name="last_modified_by" type="binary(16)"/>
            <column name="last_modified_at" type="timestamp(6)"/>
        </createTable>

        <createIndex indexName="index_comment" tableName="ftd_comment">
            <column name="thread_id"/>
            <column name="created_at"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>
